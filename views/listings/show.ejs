<% layout("layouts/boilerplate") %>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2 mt-3">
        <h3 class="text-center text-md-start"><%= showData.title %></h3>
      </div>
    </div>
    
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2">
        <div class="mb-4">
          <img
            src="<%= showData.image.url %>"
            class="show-img img-fluid"
            alt="<%= showData.title %>"
          />
        </div>
        
        <div class="card border-0">
          <div class="card-body px-0">
            <div class="row">
              <div class="col-12 col-sm-6 mb-3">
                <p class="mb-2"><strong>Owned by:</strong> <%= showData.owner.username %></p>
                <p class="mb-2"><strong>Location:</strong> <%= showData.location %>, <%= showData.country %></p>
                <p class="mb-2"><strong>Price:</strong> &#8377;<%= showData.price.toLocaleString("en-IN") %>/night</p>
              </div>
              <div class="col-12 col-sm-6 mb-3">
                <p class="mb-2"><strong>Description:</strong></p>
                <p class="text-muted"><%= showData.description %></p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="show-btn mb-4">
          <div class="row g-2">
            <div class="col-6 col-sm-auto">
              <form method="GET" action="/listings/<%= showData.id %>/edit" class="w-100">
                <button class="btn btn-dark edit-btn w-100">Edit</button>
              </form>
            </div>
        <form
          method="POST"
          action="/listings/<%= showData.id %>?_method=DELETE"
        >
          <button class="btn btn-dark">delete</button>
        </form>
      </div>
      <br />
      <div class="col-8">
        <% if(currUser) { %>
        <hr />
        <h4>Leave a review</h4>
        <form
          class="mt-3 mb-3"
          method="POST"
          action="/listings/<%= showData.id %>/reviews"
        >
          <div class="mt-3 mb-3">
            <label for="review" class="form-label">Review</label>
            <input
              type="range"
              class="form-range"
              name="rating"
              id="review[rating]"
              min="1"
              max="5"
            />
          </div>
          <div class="mt-3 mb-3">
            <label for="comments" class="from label">comment</label>
            <textarea
              type="text"
              name="comment"
              id="review[comment]"
              cols="25"
              rows="5"
              class="form-control"
              required
            ></textarea>
          </div>
          <button class="btn btn-outline-dark" type="submit">Submit</button>
          <% } %>
        </form>
      </div>
      <hr />
      <div class="row">
        <p><b>All reviews</b></p>
        <% for(review of showData.review) {%>
        <div class="card col-5 ms-3 mb-3">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating%> stars</p>
          <form
            method="post"
            action="/listings/<%= showData.id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-dark mb-2">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
