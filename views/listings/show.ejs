<% layout("layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <h3><%= showData.title %></h3>
    </div>
    <div class="col-6 offset-2">
      <img
        type="text"
        src="<%= showData.image.url %>"
        class="card-img-top show-img"
      />
      <div class="card-body">
        <p class="card-text">
          <b>Owned by </b> <%= showData.owner.username %>
          <br />
          <b>Description: </b><%= showData.description %>
          <br />
          <b>Price: </b>&#8377;<%= showData.price.toLocaleString("en-IN") %>
          <br />
          <b>Location: </b><%= showData.location %>. <b>Country: </b><%=
          showData.country %>
          <br />
        </p>
      </div>
      <br />
      <div class="show-btn">
        <form method="GET" action="/listings/<%= showData.id %>/edit">
          <button class="btn btn-dark edit-btn">Edit</button>
        </form>
        <form
          method="POST"
          action="/listings/<%= showData.id %>?_method=DELETE"
        >
          <button class="btn btn-dark">delete</button>
        </form>
      </div>
      <br />
      <div class="col-8">
        <% if(currUser) { %>
        <hr />
        <h4>Leave a review</h4>
        <form
          class="mt-3 mb-3"
          method="POST"
          action="/listings/<%= showData.id %>/reviews"
        >
          <div class="mt-3 mb-3">
            <label for="review" class="form-label">Review</label>
            <input
              type="range"
              class="form-range"
              name="rating"
              id="review[rating]"
              min="1"
              max="5"
            />
          </div>
          <div class="mt-3 mb-3">
            <label for="comments" class="from label">comment</label>
            <textarea
              type="text"
              name="comment"
              id="review[comment]"
              cols="25"
              rows="5"
              class="form-control"
              required
            ></textarea>
          </div>
          <button class="btn btn-outline-dark" type="submit">Submit</button>
          <% } %>
        </form>
      </div>
      <hr />
      <div class="row">
        <p><b>All reviews</b></p>
        <% for(review of showData.review) {%>
        <div class="card col-5 ms-3 mb-3">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating%> stars</p>
          <form
            method="post"
            action="/listings/<%= showData.id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-dark mb-2">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
